<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= pageName + separator + appName %></title>

        <!-- ICONSCOUT CDN -->
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css" />

        <!-- GOOGLE FONTS (MONTSERRAT) -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

        <!-- CSS -->
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/course-update.css" />
        <style>
            body {
                background-image: url("/images/bg-texture.png");
            }
        </style>
    </head>

    <body>
        <%- include("../partials/navbar.ejs") %>

        <main>
            <div class="form-container">
                <h2>Add New Course</h2>
                <% let endpoint; formInputStored.id ? (endpoint = "/educator/update/course/" + formInputStored.id) : (endpoint = "/educator/update/course"); %>
                <form action="<%= endpoint %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Course Name:</label>
                        <input type="text" id="name" name="name" value="<%= formInputStored.name %>" required />
                    </div>
                    <div class="form-group">
                        <label for="description">Course Description:</label>
                        <textarea id="description" name="description" rows="4" required><%= formInputStored.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" step="0.01" id="price" name="price" value="<%= formInputStored.price %>" required />
                    </div>
                    <div class="form-group">
                        <label for="video_url">Video URL:</label>
                        <input type="url" id="video_url" name="video_url" value="<%= formInputStored.video_url %>" required />
                    </div>
                    <div class="form-group">
                        <label for="picture">Course Photo:</label>
                        <input type="file" id="picture" name="picture" accept="image/jpeg, image/png" required />
                    </div>
                    <div class="form-group">
                        <label for="category">Course Category:</label>
                        <select id="category" name="category" required>
                            <option value="" disabled selected>Select Category</option>
                            <option value="Web Development" <%= formInputStored.category === 'Web Development' ? 'selected' : '' %>>Web Development</option>
                            <option value="Computer Programming" <%= formInputStored.category === 'Computer Programming' ? 'selected' : '' %>>Computer Programming</option>
                            <option value="Game Development" <%= formInputStored.category === 'Game Development' ? 'selected' : '' %>>Game Development</option>
                            <option value="Data Science" <%= formInputStored.category === 'Data Science' ? 'selected' : '' %>>Data Science</option>
                            <option value="Design" <%= formInputStored.category === 'Design' ? 'selected' : '' %>>Design</option>
                            <option value="Others" <%= formInputStored.category === 'Others' ? 'selected' : '' %>>Others</option>                            
                            <!-- Add more categories as needed -->
                        </select>
                    </div>
                    <%if (formInputStored.id) { %>
                    <button type="submit" name="button" value="update">Update Course</button>
                    <%} else { %>
                    <button type="submit" name="button" value="add">Add Course</button>
                    <%} %>
                </form>
            </div>
        </main>

        <%- include("../partials/footer.ejs") %>
    </body>
</html>
