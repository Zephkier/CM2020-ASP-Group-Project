<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Profile - <%= appName %></title>

        <!-- ICONSCOUT CDN -->
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css" />

        <!-- GOOGLE FONTS (MONTSERRAT) -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

        <!-- CSS -->
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/profile.css" />
        <style>
            body {
                background-image: url("images/bg-texture.png");
            }
        </style>
    </head>

    <body>
        <%- include("../partials/navbar.ejs") %>

        <main class="profile-main">
            <div class="profile-container">
                <!-- Profile Header and Details (eg. email, username, bio) -->
                <div class="profile-left-section">
                    <div class="profile-header">
                        <img src="/images/profile-pictures/<%= session.user.profilePicture %>" alt="Profile Picture" class="profile-image" />
                        <h1 class="profile-name">Welcome, <%= session.user.displayName %></h1>
                    </div>

                    <div class="profile-details">
                        <h2>Your Details</h2>
                        <p><strong>Email:</strong> <%= session.user.email %></p>
                        <p><strong>Username:</strong> <%= session.user.username %></p>
                        <p><strong>Bio:</strong> <%= session.user.bio %></p>
                        <!-- <button class="btn btn-primary" onclick="window.location.href='/user/edit-profile'">Edit Profile</button> -->
                        <button class="btn btn-primary" onclick="window.location.href='/user/edit-profile'">Edit Profile</button>
                        <form action="/user/logout" method="GET" style="margin-top: 1rem">
                            <button type="submit" class="btn btn-secondary">Logout</button>
                        </form>
                    </div>
                </div>

                <!-- Enrolled Courses -->
                <div class="enrolled-courses">
                    <h2>Your Enrolled Courses</h2>
                    <% if (session.user.enrolledCourses && session.user.enrolledCourses.length > 0) { %>
                    <ul>
                        <% session.user.enrolledCourses.forEach(course => { %>
                        <li class="course-item">
                            <h4><%= course.name %></h4>
                            <p><%= course.description %></p>
                        </li>
                        <% }) %>
                    </ul>
                    <% } else { %>
                    <p>You have not enrolled in any courses yet.</p>
                    <% } %>
                </div>
            </div>
        </main>

        <%- include("../partials/footer.ejs") %>

        <script src="/main.js"></script>
    </body>
</html>
