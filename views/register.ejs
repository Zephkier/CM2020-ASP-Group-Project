<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= pageName + tabNameSeparator + appName %></title>

        <!-- ICONSCOUT CDN -->
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css" />

        <!-- GOOGLE FONTS (MONTSERRAT) -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

        <!-- CSS -->
        <link rel="stylesheet" href="css/login.css" />
        <link rel="stylesheet" href="css/style.css" />

        <style>
            body {
                background-image: url("images/bg-texture.png");
            }

            .form-container {
                display: none;
            }
            .error-message {
                color: red;
            }
            .password-strength {
                color: green;
            }
        </style>
    </head>

    <body>
        <%- include("./partials/navbar.ejs") %>
        <!-- ========================= END OF NAVBAR ========================= -->

        <main>
            <div class="login-container">
                <section class="form-section">
                    <h2 id="form-title">Create a New User</h2>
                    <!-- Registration Buttons -->
                    <button onclick="showForm('student')">Register as Student</button>
                    <button onclick="showForm('educator')">Register as Educator</button>

                    <!-- User Registration Form -->
                    <div id="form-container" class="form-container">
                        <form id="registration-form" action="/register" method="POST">
                            <input type="hidden" name="role" id="form-role" />
                            <div class="form-group">
                                <label for="user">Username:</label>
                                <input id="user" type="text" name="username" required />
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input id="email" type="email" name="email" required />
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input id="password" type="password" name="password" required />
                                <span class="toggle-password" onclick="togglePassword()">Show Password</span>
                            </div>
                            <div class="form-group">
                                <label for="confirm-password">Confirm Password:</label>
                                <input id="confirm-password" type="password" name="confirm-password" required />
                            </div>
                            <div id="extra-fields"></div>
                            <button id="submit-button" type="submit">Create a new user</button>
                            <div id="form-message" class="form-message"></div>
                        </form>
                    </div>

                    <div class="login-redirect">
                        <a href="/login">Back to Login</a>
                    </div>
                </section>
            </div>
        </main>

        <!-- ========================= END OF ADD USER ========================= -->

        <%- include("./partials/footer.ejs") %>
        <!-- ========================= END OF FOOTER ========================= -->

        <script>
            function showForm(role) {
                const formContainer = document.getElementById("form-container");
                const extraFields = document.getElementById("extra-fields");
                const formRole = document.getElementById("form-role");
                const formTitle = document.getElementById("form-title");
                const submitButton = document.getElementById("submit-button");

                formRole.value = role;

                // Update header text and button text based on role
                if (role === "student") {
                    formTitle.textContent = "Register as Student";
                    extraFields.innerHTML = `
                        <div class="form-group">
                            <label for="major">Major:</label>
                            <input id="major" type="text" name="major" value="Not Enrolled" />
                        </div>
                        <div class="form-group">
                            <label for="year">Year:</label>
                            <input id="year" type="number" name="year" value="0" />
                        </div>
                    `;
                    submitButton.textContent = "Create a new Student Account";
                } else if (role === "educator") {
                    formTitle.textContent = "Register as Educator";
                    extraFields.innerHTML = `
                        <div class="form-group">
                            <label for="department">Department:</label>
                            <input id="department" type="text" name="department" value="No Department" />
                        </div>
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input id="title" type="text" name="title" value="No Title" />
                        </div>
                    `;
                    submitButton.textContent = "Create a new Educator Account";
                }

                formContainer.style.display = "block";
            }

            function togglePassword() {
                const passwordInput = document.getElementById("password");
                const confirmPasswordInput = document.getElementById("confirm-password");
                const type = passwordInput.type === "password" ? "text" : "password";
                passwordInput.type = type;
                confirmPasswordInput.type = type;
                document.querySelector(".toggle-password").textContent = type === "password" ? "Show Password" : "Hide Password";
            }
        </script>

        <script src="/main.js"></script>
    </body>
</html>
